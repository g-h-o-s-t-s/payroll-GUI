<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="root"
      stylesheets="/com/group19/payrollGUI/styles.css"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.group19.payrollGUI.Controller">
    <MenuBar fx:id="MenuBar" VBox.vgrow="NEVER">
        <Menu fx:id="MenuFile" mnemonicParsing="false" text="File">
            <MenuItem fx:id="Import" mnemonicParsing="false" text="Import..."/>
            <MenuItem fx:id="Export" mnemonicParsing="false" text="Export..."/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="Quit" mnemonicParsing="false" text="Quit"/>
        </Menu>
        <Menu fx:id="MenuEdit" mnemonicParsing="false" text="Edit">
            <MenuItem fx:id="Cut" mnemonicParsing="false" text="Cut"/>
            <MenuItem fx:id="Copy" mnemonicParsing="false" text="Copy"/>
            <MenuItem fx:id="Paste" mnemonicParsing="false" text="Paste"/>
            <MenuItem fx:id="Delete" mnemonicParsing="false" text="Delete"/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="SelectAll" mnemonicParsing="false" text="Select All"/>
            <MenuItem fx:id="UnselectAll" mnemonicParsing="false" text="Unselect All"/>
        </Menu>
        <Menu fx:id="MenuHelp" mnemonicParsing="false" text="Help">
            <MenuItem fx:id="About" mnemonicParsing="false" text="About..."/>
        </Menu>
    </MenuBar>
    <AnchorPane fx:id="ContentAnchorPane" VBox.vgrow="ALWAYS">
        <BorderPane fx:id="PrimaryBorderPane"
                    AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" >
            <bottom>
                <HBox fx:id="BottomHBox" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Label fx:id="statusMessage" onMouseEntered="#sayClearText">
                        <padding>
                            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                        </padding>
                    </Label>
                </HBox>
            </bottom>
            <top>
                <Pane fx:id="TitlePane" BorderPane.alignment="CENTER">
                    <Label fx:id="TitleLabel"
                           text="Payroll Processing System" styleClass="label-title">
                        <padding>
                            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                        </padding>
                    </Label>
                </Pane>
            </top>
            <center>
                <HBox fx:id="CenterHBox"
                      maxHeight="-Infinity" maxWidth="-Infinity"
                      minHeight="-Infinity" minWidth="-Infinity"
                      BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="AddPartTime" mnemonicParsing="false"
                            onMouseClicked="#sayAddPartTime"
                            text="Add Part Time">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="20.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="AddFullTime" mnemonicParsing="false"
                            onMouseClicked="#sayAddFullTime"
                            text="Add Full Time">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="AddManagement" mnemonicParsing="false"
                            onMouseClicked="#sayAddManagement"
                            text="Add Management">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="Calculate" mnemonicParsing="false"
                            onMouseClicked="#sayCalculate"
                            text="Calculate">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="SetHours" mnemonicParsing="false"
                            onMouseClicked="#saySetHours"
                            text="Set Hours">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="Remove" mnemonicParsing="false"
                            onMouseClicked="#sayRemove" text="Remove">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </center>
        </BorderPane>
    </AnchorPane>
</VBox>
