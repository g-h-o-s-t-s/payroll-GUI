<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.ScrollPane?>

<VBox styleClass="root"
      stylesheets="/com/group19/payrollGUI/styles.css"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="com.group19.payrollGUI.Controller">
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
        <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
            <MenuItem fx:id="importFile" mnemonicParsing="false" text="Import..."
                onAction="#openImportDialog"/>
            <MenuItem fx:id="exportFile" mnemonicParsing="false" text="Export..."/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="quit" mnemonicParsing="false" text="Quit"
            onAction="#exitProgram"/>
        </Menu>
    </MenuBar>
    <AnchorPane fx:id="contentAnchorPane" VBox.vgrow="ALWAYS">
        <BorderPane fx:id="primaryBorderPane"
                    AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" >
            <bottom>
                <ScrollPane fx:id="bottomScrollPane" prefHeight="300.0">
                    <Label fx:id="statusMessage" text = "Payroll Processing System Starts."
                           onMouseEntered="#sayClearText">
                        <padding>
                            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                        </padding>
                    </Label>
                </ScrollPane>
            </bottom>
            <top>
                <Pane fx:id="titlePane" BorderPane.alignment="CENTER">
                    <Label fx:id="titleLabel"
                           text="Payroll Processing System" styleClass="label-title">
                        <padding>
                            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                        </padding>
                    </Label>
                </Pane>
            </top>
            <center>
                <HBox fx:id="centerHBox"
                      maxHeight="-Infinity" maxWidth="-Infinity"
                      minHeight="-Infinity" minWidth="-Infinity"
                      BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="addPartTime" mnemonicParsing="false"
                            onMouseClicked="#sayAddPartTime"
                            text="Add Part Time">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="20.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="addFullTime" mnemonicParsing="false"
                            onMouseClicked="#sayAddFullTime"
                            text="Add Full Time">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="addManagement" mnemonicParsing="false"
                            onMouseClicked="#sayAddManagement"
                            text="Add Management">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="calculate" mnemonicParsing="false"
                            onMouseClicked="#sayCalculate"
                            text="Calculate">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="setHours" mnemonicParsing="false"
                            onMouseClicked="#saySetHours"
                            text="Set Hours">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="remove" mnemonicParsing="false"
                            onMouseClicked="#sayRemove" text="Remove">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="print" mnemonicParsing="false"
                            onMouseClicked="#sayPrint" text="Print Database">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="20.0" top="15.0"/>
                        </HBox.margin>
                    </Button>
                </HBox>
            </center>
        </BorderPane>
    </AnchorPane>
</VBox>
