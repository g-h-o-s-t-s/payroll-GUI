<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.group19.payrollGUI.Controller"
          stylesheets="/com/group19/payrollGUI/styles.css"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
          hgap="10" vgap="12" styleClass="root">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="0"
            text="Add PartTime Employee" onAction="#sayAddPartTime"/>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="1"
            text="Add FullTime Employee" onAction="#sayAddFullTime"/>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="2"
            text="Add Management" onAction="#sayAddFullRole"/>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="3"
            text="Remove Employee" onAction="#sayRemove"/>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="4"
            text="Calculate Compensations" onAction="#sayCalculate"/>

    <Button GridPane.rowIndex="0" GridPane.columnIndex="5"
            text="Set Hours" onAction="#saySetHours"/>

    <Label GridPane.rowIndex="4" GridPane.columnIndex="3" fx:id="statusMessage"/>

</GridPane>
