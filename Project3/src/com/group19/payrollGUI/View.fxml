<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox styleClass="root"
      stylesheets="/com/group19/payrollGUI/styles.css"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/10.0.1"
      fx:controller="com.group19.payrollGUI.Controller">
    <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
        <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
            <MenuItem fx:id="importFile" mnemonicParsing="false" text="Import..."/>
            <MenuItem fx:id="exportFile" mnemonicParsing="false" text="Export..."/>
            <SeparatorMenuItem mnemonicParsing="false"/>
            <MenuItem fx:id="quit" mnemonicParsing="false" text="Quit"/>
        </Menu>
    </MenuBar>
    <AnchorPane fx:id="contentAnchorPane" VBox.vgrow="ALWAYS">
        <BorderPane fx:id="primaryBorderPane"
                    AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" >
            <bottom>
                <TextArea fx:id="statusMessage" maxHeight="360.0" maxWidth="1280.0"
                          text = "Payroll Processing System Starts.">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                    </padding>
                </TextArea>
            </bottom>
            <top>
                <Pane fx:id="titlePane" BorderPane.alignment="CENTER">
                    <Label fx:id="titleLabel"
                           text="Payroll Processing System" styleClass="label-title">
                        <padding>
                            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
                        </padding>
                    </Label>
                </Pane>
            </top>
            <center>
                <ButtonBar fx:id="buttonBar" buttonOrder="L_HE+U+FBIX_NCYOA_T" buttonMinWidth="50.0"
                           prefHeight="30.0" ButtonBar.buttonData="APPLY" translateX="-75.0">
                    <buttons>
                        <Button fx:id="addFullTime" mnemonicParsing="false" text="+ FT">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Add Full-Time Employee" /></tooltip>
                        </Button>
                        <Button fx:id="addPartTime" mnemonicParsing="false" text="+ PT">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Add Part-Time Employee" /></tooltip>
                        </Button>
                        <Button fx:id="addManagement" mnemonicParsing="false" text="+ MA">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Add Management Position" /></tooltip>
                        </Button>
                        <Button fx:id="remove" mnemonicParsing="false" text="REMOVE">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Remove Employee" /></tooltip>
                        </Button>
                        <Button fx:id="calculate" mnemonicParsing="false" text="PAYMENTS">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Calculate Employee Compensations" /></tooltip>
                        </Button>
                        <Button fx:id="setHours" mnemonicParsing="false" text="SET-HOURS">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Set Working Hours for Part-Time Employee." /></tooltip>
                        </Button>
                        <Button fx:id="print" mnemonicParsing="false" text="PRINT">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Print Database Contents" /></tooltip>
                        </Button>
                        <Button fx:id="printDate" mnemonicParsing="false" text="BY-DATE">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Print Database Contents by Hiring Date" /></tooltip>
                        </Button>
                        <Button fx:id="printDep" mnemonicParsing="false" text="BY-DEP">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                            <tooltip><Tooltip text="Print Database Contents by Department" /></tooltip>
                        </Button>
                    </buttons>
                </ButtonBar>
            </center>
        </BorderPane>
    </AnchorPane>
</VBox>
